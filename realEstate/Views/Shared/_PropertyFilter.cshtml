<!-- Modal HTML -->
<div id="filterModal" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Filter Properties</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <input type="hidden" name="zipcode" value="@Model[0].Zipcode">
                <input type="hidden" name="tricky-input" value="">

                <label for="priceRange" class="control-label">Price Range</label>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="priceRangeMin" class="control-label">Min</label>
                            <select class="form-control" name="priceRangeMin" id="priceRangeMin">
                                <option value="0">Any</option>
                                <option value="100000">100.000+</option>
                                <option value="200000">200.000+</option>
                                <option value="300000">300.000+</option>
                                <option value="400000">400.000+</option>
                                <option value="500000">500.000+</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="priceRangeMax" class="control-label">Max</label>
                            <select class="form-control" name="priceRangeMax" id="priceRangeMax">
                                <option value="0">Any</option>
                                <option value="100000">100.000+</option>
                                <option value="200000">200.000+</option>
                                <option value="300000">300.000+</option>
                                <option value="400000">400.000+</option>
                                <option value="500000">500.000+</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="bedroomsNum" class="control-label">Bedrooms #</label>
                        <select class="form-control" name="bedroomsNum" id="bedroomsNum">
                            <option value="0">Any</option>
                            <option value="1">1+</option>
                            <option value="2">2+</option>
                            <option value="3">3+</option>
                            <option value="4">4+</option>
                            <option value="5">5+</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="bathroomsNum" class="control-label">Bathrooms #</label>
                        <select class="form-control" name="bathroomsNum" id="bathroomsNum">
                            <option value="0">Any</option>
                            <option value="1">1+</option>
                            <option value="2">2+</option>
                            <option value="3">3+</option>
                            <option value="4">4+</option>
                            <option value="5">5+</option>
                        </select>
                    </div>
                </div>
                <label for="sqrfLand" class="control-label">Square Feet</label>
                <div class="form-group">

                    <div class="row">
                        <div class="col-md-6">
                            <label for="sqrfLandMin" class="control-label">Min</label>
                            <select class="form-control" name="sqrfLandMin" id="sqrfLandMin">
                                <option value="0">Any</option>
                                <option value="500">500+</option>
                                <option value="750">750+</option>
                                <option value="1000">1000+</option>
                                <option value="1250">1250+</option>
                                <option value="1500">1500+</option>
                                <option value="1750">1750+</option>
                                <option value="2000">2000+</option>
                                <option value="2250">2250+</option>
                                <option value="2500">2500+</option>
                                <option value="2750">2750+</option>
                                <option value="3000">3000+</option>
                                <option value="3500">3500+</option>
                                <option value="4000">4000+</option>
                                <option value="5000">5000+</option>
                                <option value="6000">6000+</option>
                                <option value="7000">7000+</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="sqrfLandMax" class="control-label">Max</label>
                            <select class="form-control" name="sqrfLandMax" id="sqrfLandMax">
                                <option value="0">Any</option>
                                <option value="500">500+</option>
                                <option value="750">750+</option>
                                <option value="1000">1000+</option>
                                <option value="1250">1250+</option>
                                <option value="1500">1500+</option>
                                <option value="1750">1750+</option>
                                <option value="2000">2000+</option>
                                <option value="2250">2250+</option>
                                <option value="2500">2500+</option>
                                <option value="2750">2750+</option>
                                <option value="3000">3000+</option>
                                <option value="3500">3500+</option>
                                <option value="4000">4000+</option>
                                <option value="5000">5000+</option>
                                <option value="6000">6000+</option>
                                <option value="7000">7000+</option>
                            </select>
                        </div>
                    </div>
                </div>

                <label for="sqrfLand" class="control-label">Lot Size</label>
                <div class="form-group">

                    <div class="row">
                        <div class="col-md-6">
                            <label for="lotSizeMin" class="control-label">Min</label>
                            <select class="form-control" name="lotSizeMin" id="lotSizeMin">
                                <option value="0">Any</option>
                                <option value="1000">1000+</option>
                                <option value="2000">2000+</option>
                                <option value="3000">3000+</option>
                                <option value="4000">4000+</option>
                                <option value="5000">5000+</option>
                                <option value="6000">6000+</option>
                                <option value="7000">7000+</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="lotSizeMax" class="control-label">Max</label>
                            <select class="form-control" name="lotSizeMax" id="lotSizeMax">
                                <option value="0">Any</option>
                                <option value="1000">1000+</option>
                                <option value="2000">2000+</option>
                                <option value="3000">3000+</option>
                                <option value="4000">4000+</option>
                                <option value="5000">5000+</option>
                                <option value="6000">6000+</option>
                                <option value="7000">7000+</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success">Filter</button>
            </div>
        </div>
    </div>
</div>