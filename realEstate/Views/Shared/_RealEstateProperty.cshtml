@model RealEstatePropertyShared.Models.RealEstateProperty
    <div class="col-sm-6 col-md-4">
        <div class="property-card">
            <div class="image-container">
                <img src="@Model.Images[0]" />
                @using (Html.BeginForm("SaveProperty", "RealEstateProperties", FormMethod.Post))
                {
                    <input type="hidden" name="zpid" value="@Model.Zpid">

                    <button class="like-btn @Html.Raw(Model.IsSaved == true ? "saved-btn" : "nosaved-btn" )" type="submit">
                        <i class="fa fa-heart" aria-hidden="true"></i>
                    </button>
                }
            </div>
            <div class="property-card-info">
                <div class="property-card-info-top">
                    <h3>@Model.PriceAsString</h3>
                    <p>@Model.Bedrooms bds | @Model.Bathrooms ba | @Model.FinishedSqFt sqft</p>
                </div>
                <div class="property-card-info-bottom">
                    <h5>@Model.Street, @Model.City, @Model.State @Model.Zipcode</h5>
                    <div class="row">
                        <div class="col-sm-6">
                            <h5><i class="fa fa-university" aria-hidden="true"></i> NOI: @Model.NOIAsString</h5>
                            <h5><i class="fa fa-balance-scale" aria-hidden="true"></i> Cap Rate: @Model.CapRateAsString</h5>
                        </div>
                        <div class="col-sm-6">
                            <h5><i class="fa fa-money" aria-hidden="true"></i> Cashflow: @Model.CashflowAsString</h5>
                            <h5><i class="fa fa-refresh" aria-hidden="true"></i> COC: @Model.COCAsString</h5>
                        </div>
                    </div>
                    <br />
                    <div class="detail-btn-container">
                        @Html.ActionLink("Details", "Details", new { zpid = Model.Zpid }, new { @class = "details-btn" })
                    </div>
                    <br />
                    </div>

            </div>
        </div>
    </div>
